<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.sand.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivletterquiz"
            android:layout_margin="8dp"/>


        <TextView
            android:id="@+id/tvquiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/ivlettersubject"
            android:layout_alignTop="@+id/ivlettersubject"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/ivlettersubject"
            android:layout_alignParentRight="true"></TextView>
    </RelativeLayout>
</android.support.v7.widget.CardView>